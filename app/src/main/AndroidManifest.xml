<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zyang_000.myimageeditor" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".disRemActivity"
            android:label="@string/title_activity_dis_rem"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zyang_000.myimageeditor.MainMenu" />
        </activity>
        <activity
            android:name=".colCorActivity"
            android:label="@string/title_activity_col_cor"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zyang_000.myimageeditor.MainMenu" />
        </activity>
        <activity
            android:name=".conEnhActivity"
            android:label="@string/title_activity_con_enh"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zyang_000.myimageeditor.MainMenu" />
        </activity>
        <activity
            android:name=".edgDetActivity"
            android:label="@string/title_activity_edg_det"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zyang_000.myimageeditor.MainMenu" />
        </activity>
        </application>

</manifest>
