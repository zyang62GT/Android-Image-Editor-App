<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_menu"
    tools:context=".MainMenu">



    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Distortion Removal"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="distortionRemoval"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Color Correction"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="colorCorrection"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Contrast Enhancement"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="contrastEnhancement"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Edge Detection"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="edgeDetection"/>

</LinearLayout>
